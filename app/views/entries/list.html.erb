<h1>Administrar Noticias</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Titular</th>
      <th scope="col">Fecha de publicación</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.titular %></td>
        <td><%= entry.created_at %></td>
        <td><%= link_to "Editar", edit_entry_path(entry) %>  <%= link_to "Eliminar", entry, method: :delete, data: { confirm: "Estás seguro?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<a href="entries/new" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Publicar Nueva Noticia</a>
